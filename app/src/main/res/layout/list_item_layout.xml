<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_list_poster"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="match_parent"
        android:contentDescription="@string/iv_poster_description"/>

    <ImageView
        android:id="@+id/iv_favourite"
        android:src="@drawable/ic_heart_outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_text_padding"
        android:layout_marginTop="@dimen/default_text_padding"
        android:contentDescription="@string/iv_favourite_icon_description"/>

</FrameLayout>