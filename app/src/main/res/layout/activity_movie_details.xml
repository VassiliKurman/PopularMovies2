<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="vkurman.popularmovies2.MovieDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:elevation="4dp" >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?android:attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/description_toolbar_image"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/toolbar_side_margin"
                android:layout_marginRight="@dimen/toolbar_side_margin"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentInsetStart="8dp"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/poster_iv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/iv_poster_description"
                android:paddingLeft="@dimen/default_text_padding"
                android:paddingRight="@dimen/default_text_padding"
                android:paddingTop="@dimen/default_text_padding"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/DefaultView"
                android:id="@+id/tv_details_title"
                android:paddingTop="@dimen/default_text_padding"
                android:textSize="@dimen/details_year_text_size"
                app:layout_constraintStart_toEndOf="@id/poster_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/DefaultView"
                android:id="@+id/release_date_tv"
                android:textSize="@dimen/details_year_text_size"
                app:layout_constraintStart_toEndOf="@id/poster_iv"
                app:layout_constraintTop_toBottomOf="@id/tv_details_title" />

            <TextView
                style="@style/DefaultView"
                android:id="@+id/rating_tv"
                app:layout_constraintStart_toEndOf="@id/poster_iv"
                app:layout_constraintTop_toBottomOf="@id/release_date_tv"
                android:text="@string/tv_rating"/>

            <TextView
                style="@style/DefaultView"
                android:id="@+id/vote_average_tv"
                app:layout_constraintStart_toEndOf="@id/rating_tv"
                app:layout_constraintTop_toBottomOf="@id/release_date_tv" />

            <ImageView
                style="@style/DefaultView"
                android:id="@+id/iv_details_favourite"
                android:src="@drawable/ic_heart_outline"
                app:layout_constraintStart_toEndOf="@id/poster_iv"
                app:layout_constraintTop_toBottomOf="@id/rating_tv"
                android:contentDescription="@string/iv_favourite_icon_description"/>
            <Button
                style="@style/DefaultView"
                android:id="@+id/btn_reviews"
                app:layout_constraintStart_toEndOf="@id/poster_iv"
                app:layout_constraintTop_toBottomOf="@id/iv_details_favourite"
                android:background="@drawable/rounded_border_button"
                android:text="@string/btn_reviews" />

            <TextView
                style="@style/DefaultView"
                android:id="@+id/plot_synopsis_tv"
                android:paddingTop="@dimen/default_text_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poster_iv" />

            <View
                android:id="@+id/divider_trailers"
                style="@style/HorizontalDivider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/plot_synopsis_tv"/>

            <TextView
                android:id="@+id/tv_trailers_text"
                style="@style/DefaultView"
                android:text="@string/text_trailers"
                android:textSize="@dimen/details_title_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_trailers"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_videos"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_trailers_text"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>